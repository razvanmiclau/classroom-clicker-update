<% @topics.each do |topic| %>
  <tr>
    <td><%= topic.title %></td>
    <td class="td-actions text-right">
      <%= link_to 'Show', topic, class: 'btn btn-info btn-simple btn-sm' %>
      <%= link_to 'Edit', edit_topic_path(topic), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#classroom-modal', :class => 'btn btn-warning btn-simple btn-sm' } %>
      <%= link_to 'Destroy', topic, class: 'btn btn-danger btn-simple btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
