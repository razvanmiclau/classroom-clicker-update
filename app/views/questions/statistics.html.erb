<div class="row">
  <div class="col-md-4">
    <div class="card">
      <div class="header">
        <h2 class="title"><%= @question.title %></h2>
        <p class="category">A list of all the answers received for this question</p>
      </div>
      <div class="content">
        <div class="table-full-width">
          <table class="table">
            <tbody>
              <% @answers.each do |answer| %>
                <tr>
                  <!-- <td><label><%= display_username %></label></td> -->
                  <td><h4>"<%= answer.value %>"</h4><small><%= time_ago_in_words(answer.created_at) %> ago</small></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="footer">
          <hr>
          <div class="stats">
            <i class="glyphicon glyphicon-time"></i>
            Updated <%= time_ago_in_words(Time.now) %> ago
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <div class="card">
      <div class="header">
        <h2 class="title">Student Engagement</h2>
        <p class="category">A comparisson between the number of visits and the number of answers</p>
      </div>
      <div class="content">
        <%= pie_chart answers: @answers.count,visits: @visits %>
        <div class="footer">
          <div class="category">
            Your Student Engagement Rate is <%= @question.engagement_rate %> %
          </div>
          <hr>
          <div class="stats">
            <i class="glyphicon glyphicon-time"></i>
            Updated <%= time_ago_in_words(Time.now) %> ago
          </div>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="header">
        <h2 class="title">Number of answers per minute</h2>
        <p class="category">See which part of the lecture is more likely to receive answers from students</p>
      </div>
      <div class="content">
        <%= line_chart @answers.group_by_minute %>
        <div class="footer">
          <div class="category">
          </div>
          <hr>
          <div class="stats">
            <i class="glyphicon glyphicon-time"></i>
            Updated <%= time_ago_in_words(Time.now) %> ago
          </div>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="header">
        <h2 class="title">Most visited questions</h2>
        <p class="category">Compare question statistics</p>
      </div>
      <div class="content">
        <%= column_chart topic_question_data_path %>
        <div class="footer">
          <div class="category">
          </div>
          <hr>
          <div class="stats">
            <i class="glyphicon glyphicon-time"></i>
            Updated <%= time_ago_in_words(Time.now) %> ago
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
