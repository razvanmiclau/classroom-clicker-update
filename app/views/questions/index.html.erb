<p id="notice"><%= notice %></p>

<h1>Listing Questions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td><%= question.kind %></td>
        <td><%= question.topic.title %></td>
        <td><%= link_to 'Show', [@topic, question] %></td>
        <td><%= link_to 'Edit', edit_topic_question_path(@topic, question) %></td>
        <td><%= link_to 'Destroy', [@topic, question], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
