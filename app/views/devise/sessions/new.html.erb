<div class="card">
  <div class="header">
    <h2 class="title">Login</h2>
  </div><hr>
  <div class="content">
    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), label_errors: true) do |f| %>
    <%= devise_error_messages! %>
        <%= f.email_field :email, autofocus: true, placeholder: 'Your E-mail', :class => 'required'%>
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Your Password', :class => 'required'%>
      <div class="footer text-center">
        <p class="categories" style="padding:12px 0">
          <%= f.submit "Log in", class: 'btn btn-primary btn-fill btn-wd' %>
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-warning btn-fill btn-wd" %><br />
          <% end -%>
        </p>
        <hr>
        <div class="stats">
          <p style="margin:0">Forgot your password?
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Request a password reset", new_password_path(resource_name) %><br />
            <% end -%>
          </p>

        </div>
      </div>
    <% end %>
  </div>
</div>
