<div class="card">
  <div class="header">
    <h2 class="title">Sign Up</h2>
  </div><hr>
  <div class="content">
    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <!-- <%= devise_error_messages! %> -->

        <%= f.text_field :first_name, autofocus: true, placeholder:Faker::Name.first_name , :class => 'required'%>
        <%= f.text_field :last_name, autofocus: true, placeholder: Faker::Name.last_name, :class => 'required' %>
        <%= f.email_field :email, autofocus: true, placeholder: 'yourname@email.com', :class => 'required' %>

        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>

        <%= f.password_field :password, autocomplete: "off", placeholder: 'Your password must contain minimum 8 characters', :class => 'required' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm your password', :class => 'required' %>

    <div class="footer text-center">
      <p class="categories" style="padding:12px 0">
          <%= f.submit "Sign up", class: 'btn btn-primary btn-fill btn-wd' %>
      </p><hr>
      <div class="stats">
        <p style="margin:0">Already have an account?</p>
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
